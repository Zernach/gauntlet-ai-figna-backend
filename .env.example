# ========================================
# FIGNA BACKEND - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ========================================
# CORS CONFIGURATION
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# ========================================
# RATE LIMITING
# ========================================
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window per authenticated user
RATE_LIMIT_MAX_REQUESTS_PER_USER=200

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
# Heartbeat interval in milliseconds (default: 30 seconds)
WS_HEARTBEAT_INTERVAL=30000
# Heartbeat timeout in milliseconds (default: 60 seconds)
WS_HEARTBEAT_TIMEOUT=60000

# ========================================
# SECURITY
# ========================================
# Session secret for signing cookies/tokens
SESSION_SECRET=your-random-secret-key-here
# Enable/disable development mode features (NEVER enable in production)
ALLOW_DEV_MODE=false
# API request signing secret
API_SIGNING_SECRET=your-api-signing-secret-here

# ========================================
# OPENAI CONFIGURATION (Optional)
# ========================================
# For voice features
GAUNTLET_OPEN_AI_API_KEY_1=your-openai-api-key-here

# ========================================
# LOGGING
# ========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Enable security event logging
SECURITY_LOGGING_ENABLED=true

# ========================================
# PERFORMANCE
# ========================================
# Canvas cache size
CANVAS_CACHE_SIZE=10
CANVAS_CACHE_TTL_MS=30000
# Shapes cache size
SHAPES_CACHE_SIZE=50
SHAPES_CACHE_TTL_MS=5000
